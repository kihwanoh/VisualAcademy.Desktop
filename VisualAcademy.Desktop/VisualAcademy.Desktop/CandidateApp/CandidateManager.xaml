<Window
    x:Class="VisualAcademy.Desktop.CandidateApp.CandidateManager"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:VisualAcademy.Desktop.CandidateApp"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="CandidateManager"
    Width="800"
    Height="450"
    FontSize="30"
    mc:Ignorable="d">
    <Grid>
        <Button
            x:Name="btnAddCandidate"
            Margin="20"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Click="btnAddCandidate_Click" Width="100">
            <Button.Content>
                <StackPanel Orientation="Horizontal">
                    <Image
                        Width="16"
                        Height="16"
                        Margin="5,0,5,0"
                        Source="/Images/plus-2x.png" />
                    <TextBlock Text="Add" />
                </StackPanel>
            </Button.Content>
        </Button>
    </Grid>
</Window>
