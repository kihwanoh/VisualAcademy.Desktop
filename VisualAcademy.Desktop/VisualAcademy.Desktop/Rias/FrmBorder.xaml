<Window x:Class="VisualAcademy.Desktop.Rias.FrmBorder"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VisualAcademy.Desktop.Rias"
        mc:Ignorable="d"
        Title="FrmBorder" Height="450" Width="800" d:DesignHeight="300" d:DesignWidth="400">
    <Grid x:Name="LayoutRoot" Background="White">
        <Border BorderBrush="Red" BorderThickness="5" CornerRadius="20"
                Padding="30" Margin="30">
            <StackPanel>
                <Ellipse Width="100" Height="100" Fill="Yellow"></Ellipse>
                <Button Content="버튼"></Button>
            </StackPanel>
        </Border>
    </Grid>
</Window>
